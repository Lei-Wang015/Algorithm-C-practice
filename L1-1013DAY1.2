# 读取输入的正整数N（题目限制N不超过10，无需考虑大数问题）
N = int(input())

# 初始化阶乘和S的结果为0（S是1!+2!+...+N!的总和）
sum_s = 0

# 初始化当前数的阶乘值：1!的结果是1，作为后续阶乘计算的基础
current_fact = 1

# 循环遍历1到N的每个整数，依次计算每个数的阶乘并累加
for i in range(1, N + 1):
    # 别忘打冒号！！！！！！！！！！！！！！！！！！！！！！
    # 计算i的阶乘：i! = (i-1)! × i（利用上一次的阶乘结果，避免重复计算）
    current_fact *= i
    # 将当前i的阶乘值累加到总和sum_s中
    sum_s += current_fact

# 输出最终的阶乘和结果
print(sum_s)


#include <stdio.h>

int fact(int a);

int main() {
    int num = 0;
    scanf("%d", &num);
    int sum = 0;
    for(int j = 1;j <= num;j++){
        sum += fact(j);
    }
    printf("%d\n", sum);
}

int fact(int a){
    int result = 1;
//要单独定义，不能用a，这样在下次循环中a的值会发生改变
    for(int i = 1;i <= a;i++){
        result *= i;
    }
    return result;
}
