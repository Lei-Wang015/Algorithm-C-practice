#include<stdio.h>

int main(){
    //1. 用字符串存储超长整数（避免超出普通整数存储范围）；
    char nums[1001];
    //2. 初始化0-9的计数数组（初始值全为0）；
    int cnt[10] = {0};
    // 读取输入的超长整数（以字符串形式）
    scanf("%s",nums);
    //3. 遍历字符串，将字符转数字后更新对应计数；
    for(int i = 0;nums[i] != '\0';i++){//"\0"是字符串常量（类型是char*）
//正确写法是用字符常量'\0'（单引号）
        int digit = nums[i] - '0';// 字符转对应的数字（如'0'→0）
        cnt[digit] ++;
    }
    //4. 按0-9顺序输出非零计数的数字及次数。
    for(int i = 0;i < 10;i++){
        if(cnt[i] > 0){
            printf("%d:%d\n",i,cnt[i]);
        }
    }
    return 0;
}
